<%- include('../layouts/header') %> 
<%- include('../layouts/nav') %>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Customers</h1>

  <div id="customers-section" class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 id="customers-form-title" class="m-0 font-weight-bold text-primary">
        Form edit
      </h6>
    </div>
    <div class="card-body">
      <form id="customers-form" action="/customers/data/<%= data[0].customerid %>" method="POST">
        <div class="form-group row">
          <label for="name" class="col-sm-2 col-form-label">Name</label>
          <div class="col-sm-10">
          <input
              name="name"
              type="text"
              class="form-control"
              id="name"
              placeholder="Name"
              value="<%= data[0].name %>"
              required
            />
          </div>
        </div>
        <div class="form-group row">
          <label for="address" class="col-sm-2 col-form-label">Address</label>
          <div class="col-sm-10">
            <textarea name="address" class="form-control" id="address" rows="3" required><%= data[0].address %>
            </textarea>
          </div>
        </div>
        <div class="form-group row">
          <label for="phone" class="col-sm-2 col-form-label"
            >Phone</label
          >
          <div class="col-sm-10">
            <input
              name="phone"
              type="text"
              class="form-control"
              id="phone"
              placeholder="Phone Number"
              value="<%= data[0].phone %>"
              required
            />
          </div>
        </div>
      </form>
    </div>
    <div class="card-footer">
      <button
        id="save-btn"
        form="customers-form"
        type="submit"
        class="btn btn-success btn-icon-split"
      >
        <span class="icon text-white-50">
          <i class="fas fa-database"></i>
        </span>
        <span class="text">Save</span>
      </button>
      <a
        href="/customers"
        class="btn btn-warning btn-icon-split"
        id="back-btn"
      >
        <span class="icon text-white-50">
          <i class="fas fa-undo"></i>
        </span>
        <span class="text">Back</span>
      </a>
    </div>
  </div>
</div>
</div>
<!-- End of Main Content -->
<%- include('../layouts/footer') %> 